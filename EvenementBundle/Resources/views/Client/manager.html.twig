{% extends "GlobalBundle:Client/Layout:layout.html.twig" %}

{% block metaTitle %}{{ 'evenement.client.manager.metatitle'|trans }}{% endblock %}
{% block metaDescription %}{{ 'evenement.client.manager.metadescription'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'evenement.client.manager.title'|trans }}</h1>

    <div class="recherche">
        <form action="{{ path('client_evenement_manager') }}" method="post">

            <select name="categorie">
                <option value="">{{ 'evenement.client.label.categorieall'|trans }}</option>
                {% for categorie in categories %}
                    {% if recherches.categorie == categorie.id %}
                        <option value="{{ categorie.id }}" selected>{{ categorie.nom }}</option>
                    {% else %}
                        <option value="{{ categorie.id }}">{{ categorie.nom }}</option>
                    {% endif %}
                {% endfor %}
            </select>

            <button type="submit" name="addRecherche"><i class="fa fa-search"></i></button>
        </form>
    </div>

    {% if avant %}
        <div class="evenementAvant">

            <div class="evenementTitre">
                <h3><a href="{{ path('client_evenement_view',{'slug': avant.slug, 'id': avant.id})}}">{{ avant.titre }}</a></h3>
            </div>

            {% if avant.image %}
                <div class="evenementImage">
                    <img src="{{ asset('img/evenement/miniature/' ~ avant.image) }}">
                </div>
            {% endif %}

            <div class="evenementDate">
                <p>{{ 'evenement.client.label.datedu'|trans ~' '~ avant.debut|date("d/m/Y à H:i") ~' '~ 'evenement.client.label.dateau'|trans ~' '~ avant.fin|date("d/m/Y à H:i") }}</p>
            </div>

            <div class="evenementResume">
                <p>{{ avant.resume }}</p>
            </div>

            <div class="evenementLien">
                <a href="{{ path('client_evenement_view',{'slug': avant.slug, 'id': avant.id})}}"><i class="fa fa-angle-right"></i> {{ 'evenement.client.link.plus'|trans }}</a>
            </div>

        </div>
    {% endif %}

    <div class="evenements">

        {% for evenement in pagination %}
            <div class="evenement">
                <div class="evenementTitre">
                    <h3><a href="{{ path('client_evenement_view',{'slug': evenement.slug, 'id': evenement.id})}}">{{ evenement.titre|truncate(30) }}</a></h3>
                </div>

                {% if evenement.image %}
                    <div class="evenementImage">
                        <img src="{{ asset('img/evenement/miniature/' ~ evenement.image) }}">
                    </div>
                {% endif %}

                <div class="evenementDate">
                    <p>{{ 'evenement.client.label.datedu'|trans ~' '~ evenement.debut|date("d/m/Y à H:i") ~' '~ 'evenement.client.label.dateau'|trans ~' '~ evenement.fin|date("d/m/Y à H:i") }}</p>
                </div>

                <div class="evenementResume">
                    <p>{{ evenement.resume|truncate(120) }}</p>
                </div>

                <div class="evenementLien">
                    <a href="{{ path('client_evenement_view',{'slug': evenement.slug, 'id': evenement.id})}}"><i class="fa fa-angle-right"></i> {{ 'evenement.client.link.plus'|trans }}</a>
                </div>
            </div>
        {% else %}
            <p>{{ 'evenement.client.validators.empty'|trans }}</p>
        {% endfor %}

        <div class="clear"></div>

    </div>

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}